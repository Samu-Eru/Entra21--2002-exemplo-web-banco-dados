@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row mb-2">
    <div class="text-end">
        <a href="/raca/cadastrar"
           class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <!-- Cabeçalho da tabela-->
        <tr>
            <!--Linha da tabela-->
            <th>Código</th> <!--Coluna especifica do cabeçalho-->
            <th>Nome</th>
            <th>Espécie</th>
            <th>Ação</th>
        </tr>
    </thead>
    <thead>
    <tbody>
        <!--Lugar dos registros da tabela-->
            @foreach (var raca in ViewBag.Racas)
            {
            <tr>
                <!--Linha-->
                <td>@raca.Id</td> <!--Coluna específica para Body-->
                <td>@raca.Nome</td>
                <td>@raca.Especie</td>

                <!--Cria uma nova coluna "apagar" que contém o link do método apagar dentro de RacaServico
                    pegando o ID do registro (raca.Id)
                -->
                <td>
                    <a href="/raca/editar?id=@raca.Id">Editar  </a>
                    <a href="/raca/apagar?id=@raca.Id">Apagar</a>
                </td>
            </tr>
            }
        @*<tr>
            <td>1</td> <!--Coluna específica para body-->
            <td>Pinscher</td>
            <td>Cachorro</td>
        </tr>*@
    </tbody>
    </thead>
</table>