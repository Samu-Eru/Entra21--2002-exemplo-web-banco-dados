 @model List<Raca>

     <h2>Lista de Raças</h2>

<div class="row mb-2">
    <div class="text-end">
        <a asp-action="cadastrar"
           class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <!-- Cabeçalho da tabela-->
        <tr>
            <!--Linha da tabela-->
            <th>Código</th> <!--Coluna especifica do cabeçalho-->
            <th>Nome</th>
            <th>Espécie</th>
            <th>Ação</th>
        </tr>
    </thead>
    <thead>
    <tbody>
        <!--Lugar dos registros da tabela-->
            @foreach (var raca in Model)
            {
            <tr>
                <!--Linha-->
                <td>@raca.Id</td> <!--Coluna específica para Body-->
                <td>@raca.Nome</td>
                <td>@raca.Especie</td>

                <!--Cria uma nova coluna "apagar" que contém o link do método apagar dentro de RacaServico
                    pegando o ID do registro (raca.Id)
                -->
                <td>
                    <a asp-action="editar" asp-route-id="raca.Id">Editar</a>
                    <a asp-action="apagar" asp-route-id="raca.Id">Apagar</a>
                </td>
            </tr>
            }
        @*<tr>
            <td>1</td> <!--Coluna específica para body-->
            <td>Pinscher</td>
            <td>Cachorro</td>
        </tr>*@
    </tbody>
    </thead>
</table>